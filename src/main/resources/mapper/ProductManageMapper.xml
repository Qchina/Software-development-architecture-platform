<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mypetstore.persistence.ProductManageMapper">

    <!-- 定义 resultMap -->
    <resultMap id="productMap" type="com.example.mypetstore.domain.ProductManage">
        <id property="productId" column="productid"/>
        <result property="categoryId" column="category"/>
        <result property="name" column="name"/>
        <result property="description" column="descn"/>
    </resultMap>

    <select id="getProductManageList" resultMap="productMap">
        SELECT * FROM product
    </select>

    <insert id="addProductManage" parameterType="com.example.mypetstore.domain.ProductManage">
        INSERT INTO product (productid, category, name, descn)
        VALUES (#{productId}, #{categoryId}, #{name}, #{description})
    </insert>

    <update id="updateProductManage" parameterType="com.example.mypetstore.domain.ProductManage">
        UPDATE product
        SET category = #{categoryId}, name = #{name}, descn = #{description}
        WHERE productid = #{productId}
    </update>

    <delete id="deleteProductManage" parameterType="java.lang.String">
        DELETE FROM product WHERE productid = #{productId}
    </delete>

    <select id="searchProductManageByName" resultMap="productMap">
        SELECT * FROM product WHERE name LIKE CONCAT('%', #{name}, '%')
    </select>

    <select id="getProductManageListByCategory" parameterType="java.lang.String" resultMap="productMap">
        SELECT * FROM product WHERE category = #{categoryId}
    </select>

</mapper>